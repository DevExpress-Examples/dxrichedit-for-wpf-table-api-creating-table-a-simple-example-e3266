<Window x:Class="Walkthrough_Creating_Table.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnCreateTable" Content="Create" Click="btnCreateTable_Click" Margin="5" />
        </StackPanel>
        <dxre:RichEditControl Name="richEditControl1" Grid.Row="1" DocumentLoaded ="richEditControl1_DocumentLoaded" EmptyDocumentCreated ="richEditControl1_EmptyDocumentCreated"/>
    </Grid>
</Window>
